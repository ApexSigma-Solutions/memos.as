[project]
name = "memos-as"
version = "0.1.0"
description = ""
authors = [
    {name = "SigmaDev11",email = "steynsean11@gmail.com"}
]
readme = "README.md"
requires-python = ">=3.13,<4.0"

[tool.poetry]
# Disable package mode since we're not building a package
package-mode = false

[tool.poetry.dependencies]
python = ">=3.13,<4.0"
ruff = ">=0.5.3,<1.0.0"
mypy = ">=1.0.0,<2.0.0"
pytest = ">=7.0.0,<8.0.0"
pre-commit = ">=3.0.0,<4.0.0"
mcp = ">=1.0.0,<2.0.0"
httpx = ">=0.25.0,<1.0.0"
fastapi = ">=0.100.0,<1.0.0"
uvicorn = ">=0.20.0,<1.0.0"
pydantic = ">=2.0.0,<3.0.0"
pydantic-settings = ">=2.10.1,<3.0.0"
PyJWT = ">=2.0.0,<3.0.0"
python-multipart = ">=0.0.6,<1.0.0"
apexsigma-core = {path = "../libs/apexsigma-core", develop = true}
apexsigma-devenviro = { path = "../devenviro.as", develop = true }
neo4j = ">=5.0.0,<6.0.0"
structlog = ">=20.0.0,<30.0.0"
prometheus-client = ">=0.12.0,<1.0.0"
opentelemetry-exporter-jaeger = ">=1.0.0,<2.0.0"
deprecated = ">=1.2.0,<2.0.0"
opentelemetry-instrumentation = ">=0.57b0,<1.0.0"
opentelemetry-instrumentation-fastapi = ">=0.57b0,<1.0.0"
opentelemetry-instrumentation-sqlalchemy = ">=0.57b0,<1.0.0"
sqlalchemy = ">=2.0.0,<3.0.0"
opentelemetry-instrumentation-redis = ">=0.57b0,<1.0.0"
redis = ">=4.0.0,<5.0.0"
psycopg2-binary = ">=2.9.0,<3.0.0"


[build-system]
requires = ["poetry-core>=2.0.0,<3.0.0"]
build-backend = "poetry.core.masonry.api"

# Ensure pytest emits JUnit xUnit2 XML for Trunk Flaky Tests
[tool.pytest.ini_options]
junit_family = "xunit2"
junit-xml = "reports/junit.xml"